# Ignore configuration files and data
configs/
data/

# Ignore Python cache files
__pycache__/
*.py[cod]
*.pyo

# Ignore virtual environments and environment files
venv/
.env/
.venv/
.env

# Ignore Google service account keys (sensitive credentials)
*service-account*.json
*-key.json
google_key.json
gen-lang-client-*.json

# Ignore downloaded and translated files
GCI_copy_downloads/
GCI_copy_translated/

# Optional: Ignore IDE/editor-specific files
.vscode/
.idea/

# Optional: Ignore Jupyter Notebook checkpoints
.ipynb_checkpoints/

# Allow legitimate JSON files but be specific about excluding sensitive ones
!package.json
!tsconfig.json
!requirements.json

# Ignore any files with API keys or credentials in the name
*api-key*
*credentials*
*secret*